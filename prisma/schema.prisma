datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model Article {
    slug     String @id
    title    String
    tag      String
    intro    String
    image    String
    markdown String
    length   Int

    createdAt DateTime @default(now())
}

model Project {
    id          Int     @id @default(autoincrement())
    title       String
    image       String?
    description String
    type        String
    role        String
    year        String
    stack       String
    link_type   String
    link_url    String

    createdAt DateTime @default(now())
}
